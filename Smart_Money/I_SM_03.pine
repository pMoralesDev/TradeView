//@version=6
indicator("I_SM_03", shorttitle="ZLEMA EMA/SMA", overlay=true)

// ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
// üìå INPUTS
// ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ

//üîπ MEDIASüîπ
group_ma  = "üîπ MEDIAS"
emaLen    = input.int(50,  "EMA r√°pida (base)", minval=1, group=group_ma)
smaLen    = input.int(200, "SMA lenta (filtro)", minval=1, group=group_ma)

group_atr = "üîπ Canal ATR"
atrLen    = input.int(70,  "ATR Length", minval=1, group=group_atr)
mult      = input.float(1.2, "ATR Multiplier", minval=0.1, step=0.1, group=group_atr)
atrLook   = input.int(3, "ATR lookback (x ATR Len)", minval=1, group=group_atr)

group_app = "üîπ Appearance"
green     = input.color(#00ffbb, "Bullish Color", group=group_app)
red       = input.color(#ff1100, "Bearish Color", group=group_app)

// ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
// üìà CORE: ZLEMA-like EMA + SMA filter + ATR channel
// ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
src = close

// ZLEMA: proyecta precio hacia delante y luego suaviza con EMA
lag  = math.floor((emaLen - 1) / 2)
proj = src + (src - src[lag])

basis = ta.ema(proj, emaLen)     // base r√°pida tipo ZLEMA
slow  = ta.sma(src, smaLen)      // filtro lento

// Canal de volatilidad: ATR m√°ximo reciente * multiplicador
atrNow      = ta.atr(atrLen)
atrMax      = ta.highest(atrNow, atrLen * atrLook)
volatility  = atrMax * mult

upperBand = basis + volatility
lowerBand = basis - volatility

// ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
// üß† TENDENCIA: por ruptura del canal + filtro SMA
// ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
var int trend = 0

// BULLISH: rompe por arriba y adem√°s la base est√° por encima del filtro lento
if ta.crossover(close, upperBand) and basis > slow
    trend := 1

// BEARISH: rompe por abajo y adem√°s base por debajo del filtro lento
if ta.crossunder(close, lowerBand) and basis < slow
    trend := -1

// ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
// üé® PLOTS
// ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
basisColor = trend == 1 ? color.new(green, 0) : trend == -1 ? color.new(red, 0) : color.new(color.gray, 0)

pBasis = plot(basis, "Basis (EMA ZLEMA-like)", color=color.new(basisColor, 30), linewidth=2)
pSlow  = plot(slow,  "SMA Filtro",            color=color.new(color.gray, 60), linewidth=2)

pUpper = plot(trend == -1 ? upperBand : na, "Upper Band", style=plot.style_linebr, color=color.new(red, 90))
pLower = plot(trend ==  1 ? lowerBand : na, "Lower Band", style=plot.style_linebr, color=color.new(green, 90))

mid = (open + close) / 2

fill(pBasis, pUpper, mid, upperBand, color.new(red, 90),   color.new(red, 70))
fill(pBasis, pLower, mid, lowerBand, color.new(green, 90), color.new(green, 70))


// ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
// üîî ALERTAS
// ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
bullTrendTrig = ta.crossover(trend, 0)
bearTrendTrig = ta.crossunder(trend, 0)

plotchar(bullTrendTrig ? low : na,  "Bullish Trend", "‚ñ≤", location.absolute, green, size=size.tiny)
plotchar(bearTrendTrig ? high : na, "Bearish Trend", "‚ñº", location.absolute, red,   size=size.tiny)

alertcondition(bullTrendTrig, title="Bullish Trend (Break ATR Channel)", message="üìà Bullish trend: ruptura por arriba del canal ATR con filtro SMA")
alertcondition(bearTrendTrig, title="Bearish Trend (Break ATR Channel)", message="üìâ Bearish trend: ruptura por abajo del canal ATR con filtro SMA")

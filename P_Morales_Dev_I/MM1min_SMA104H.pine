group_ma = "ðŸ”¹ MEDIAS"
H4_SMA   = input.int(10, "Longitud SMA (4H)", minval=1, group=group_ma)
A_SMA   = input.int(10, "Longitud SMA (4H)", minval=1, group=group_ma)
B_SMA   = input.int(25, "Longitud SMA (4H)", minval=1, group=group_ma)
